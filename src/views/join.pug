extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(type="text",name="name",requried,placeholder="New Name")
        input(type="email",name="email",requried,placeholder="New Email")
        input(type="text",name="username",requried,placeholder="New Username")
        input(type="password",name="password",requried,placeholder="New Password")
        input(type="text",name="location",requried,placeholder="New Location")
        input(type="submit",value="Join")


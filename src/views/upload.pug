extends base

block content
    if errorMessage 
        span=errorMessage
    
    form(method="POST")
        input(name="title",placeholder="new Title",type="text",required,maxlength=80)
        input(name="description",placeholder="new Description",type="text",required,minlength=10)
        input(name="hashtags",placeholder="new Hashtags, separated by comma.",type="text",required)
        input(value="Upload Video",type="submit")

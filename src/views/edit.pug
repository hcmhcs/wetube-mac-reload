extends base

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title",placeholder="Video Title",value=video.title,required,maxlength=80)
        input(name="description",placeholder="Description",value=video.description,required,minlength=10)
        input(name="hashtags",placeholder="Hashtags, se",value=video.hashtags.join(),required)
        input(value="Save",type="submit")